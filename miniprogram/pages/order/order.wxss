/* miniprogram/pages/order/order.wxss */
@import "../../common/common.wxss";
page{
  background-color: #F8F8F8;
}
.container{
  padding: 0;
  margin: 0;
}
.order_dec{
  padding: 24rpx 30rpx 40rpx 30rpx;
  border-top: 2rpx solid #ececec;
  background-color:#fff;
}
.order_dec_title{
  font-size:36rpx;
  font-weight:400;
  color:rgba(60,60,60,1);
}
.order_dec_img{
  border-top:2rpx solid rgba(236,236,236,1);
  padding-top: 22rpx;
  position: relative;
  margin-top: 24rpx;
}
.order_dec_img image{
  width: 150rpx;
  height: 150rpx;
}
.order_dec_img .order_dec_img_txt{
  position: absolute;
  right: 0;
  bottom: 0;
}
.order_dec_img .order_dec_img_txt text:nth-of-type(1){
  font-size: 32rpx;
  color: #565656;
  margin-bottom: 6rpx;
  display: block;
  text-align: right;
}
.order_dec_img .order_dec_img_txt text:nth-of-type(2){
  font-size: 32rpx;
  color: #3d3d3d;
  display: block;
   text-align: right;
}
/* 收货信息 */
.order_dec_meg_order .order_dec_meg_info{
  position: relative;
  width: 100%;
  height:210rpx;
  background-color: #f8f8f8;
  margin-top: 32rpx;
}
 .order_dec_meg_info .title{
  font-size:28rpx;
  font-weight:400;
  color:rgba(60,60,60,1);
  margin-top: 22rpx;
  margin-left: 30rpx;
  text-align: left;
  display: inline-block;
  
}
.order_dec_meg_info>view text:nth-of-type(1){
  font-size:28rpx;
  font-weight:bold;
  color:rgba(60,60,60,1);
  margin-top: 30rpx;
    margin-left: 30rpx;
  display: inline-block;
  text-align: left;
}
.order_dec_meg_info>view text:nth-of-type(2){
  font-size:28rpx;
  font-weight:bold;
  color:rgba(60,60,60,1);
  margin-top: 30rpx;
    margin-left: 40rpx;
  display: inline-block;
  text-align: left;
}
.order_dec_meg_info>view text:nth-of-type(3){
  font-size:28rpx;
  font-weight: 400;
  color:rgba(60,60,60,1);
  margin-top: 12rpx;
  display: block;
  margin-left: 30rpx;
  text-align: left;
}
/* 按钮 */
.order_dec .order_dec_menu{
  margin-top: 30rpx;
  display: block;
  text-align: right;
}
.order_dec .order_dec_menu button{
  color: #0142E6;
  font-size: 28rpx;
  display: inline-block;
}
.order_dec .order_dec_menu button:nth-of-type(2){
  margin-right: 16rpx;
}
.order_dec .order_dec_menu button:nth-of-type(1){
  margin-right: 70rpx;
}
.order_num{
  margin-top: 30rpx;
  padding: 22rpx 46rpx 24rpx 30rpx;
  background-color: #fff;
}
.order_num .order_num_code{
  display: block;
  position: relative;
}
.order_num .order_num_code>text{
  color: #3c3c3c;
  font-size: 32rpx;
}
.order_num .order_num_code>view{
  position: absolute;
  display: inline-block;
  right: 0;
  height: 40rpx;
}
.order_num .order_num_code>view text{
    color: #3c3c3c;
    font-size: 32rpx;
    display: inline-block;

    height: 40rpx;
    vertical-align: top;
}
.order_num .order_num_code>view button{
  color: #0142E6;
  font-size: 28rpx;
  margin-right: 20rpx;
  display: inline-block;
  width: 56rpx;
  height: 40rpx;
  padding: 0;
  line-height: 40rpx;
}
.order_num .order_num_date{
  display: block;
  color: #3c3c3c;
  font-size: 32rpx;
  margin-top: 18rpx;
  position: relative;
}
.order_num .order_num_date text:nth-of-type(2){
  position: absolute;
  right: 0
}