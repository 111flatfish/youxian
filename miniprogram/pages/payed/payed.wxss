/* miniprogram/pages/payed/payed.wxss */
@import "../../common/common.wxss";
.container{
  padding: 0;
  margin: 0;
  text-align: center;
}
.payed_up{
  position: relative;
   height: 766rpx;
}
.payed_up_tip text:nth-of-type(1){
  font-size:40rpx;
  font-weight:bold;
  color:#fff;
  position: relative;
  z-index: 2003;
  top: 106rpx;
  text-align: center;
  display: block;

}
.payed_up_tip text:nth-of-type(2){
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  position: relative;
  top: 124rpx;
  z-index: 2003;
  display: block;
}
.payed_up>image{
  width:750rpx;
  height: 766rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.payed_up>image::after{
  content: "";
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.3;
  position: absolute;
  top: 0;
  left: 0;
}
.payed_up .payed_up_erweima image{
  width: 278rpx;
  height: 278rpx;
  margin-top: 40rpx;
  position: relative;
  z-index: 2003;
  background-color: #fff;
  top:144rpx;
}
.payed_up .payed_up_menu{
  display: block;
  text-align: center;
  position: relative;
  top: 224rpx;
}
.payed_up .payed_up_menu button{
  border:2rpx solid rgba(255,255,255,1);
  border-radius: 36rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  width: 216rpx;
  height: 68rpx;
  margin: 0 30rpx;
  display: inline-block;
}
/* 下方 */
.payed_down {
  padding: 0 30rpx;
}
.payed_down .payed_down_title{
  margin-top: 28rpx;
  font-size:40rpx;
  font-weight:bold;
  color:rgba(60,60,60,1);
  text-align: left;
}