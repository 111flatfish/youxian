/* miniprogram/pages/user/user.wxss */
@import "../../common/common.wxss";
.container{
  margin: 0;
}
.user_info{
  padding: 40rpx 0;
  margin: 0 auto;
  text-align: center;
}
.user_info .user_info_img image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}
.user_info .user_info_img text{
  font-size: 40rpx;
  color: #3c3c3c;
  font-weight: bold;
  margin-top: 20rpx;
  position: relative;
  display: block;
}
.user_info .user_info_img text::after{
  content: ">";
  font-size: 40rpx;
  position: absolute;
  left: 50%;
  margin-left: 80rpx;
  top: 0;
}
.user_info_menu{
  margin-top: 56rpx;
  width: 100%;
}
.user_info_menu .user_info_menuitem{
  width: 25%;
  display: inline-block;
  text-align: center;
}
.user_info_menu .user_info_menuitem text{
  display: block;
  font-size: 28rpx;
  color: #3c3c3c;
  font-weight: 400;
  margin-top: 16rpx;
}
.user_history{
  border-top: 20rpx solid #f8f8f8;
}
.user_history .user_history_title{
  padding: 20rpx 0 16rpx 0;
}
.user_history .user_history_title view{
  width: 50%;
  display: inline-block;
  position: relative;
  text-align: center;
}
.user_history .user_history_title view text{
  font-size: 32rpx;
  color: #3c3c3c;
  font-weight: 400;
  width: 160rpx;
  display: inline-block;
  padding-bottom: 8rpx;
}
.user_history .user_history_title_active{
  border-bottom: 4rpx solid #565656;
  
}
.user_history_content{
  margin-top: 24rpx;
  margin-left: 40rpx;
}
.user_history_content .user_history_content_date{
  font-size:24rpx;
  font-weight:400;
  color:rgba(147,147,147,1);
  display: block;
}
.user_history_content .user_history_content_goods{
  margin-top: 20rpx;
  display: inline-block;
  margin-right: 42rpx;
}
.user_history_content .user_history_content_goods image{
  width: 214rpx;
  height: 214rpx;
  display: block;
}
.user_history_content .user_history_content_goods text:nth-of-type(1){
  display: block;
  font-size:28rpx;
  font-weight:400;
  color:rgba(60,60,60,1);
  margin-top: 20rpx;
}
.user_history_content .user_history_content_goods text:nth-of-type(2){
  display: block;
  font-size:28rpx;
  font-weight:400;
  color:#565656;
  line-height: 40rpx;
}
/* 收货信息 */
.user_history_order .user_history_order_info{
  position: relative;
  width: 690rpx;
  height:0;
  background-color: #f8f8f8;
  margin: 14rpx 30rpx;
  overflow: hidden;
}
.user_history_order .user_history_order_info .title{
  font-size:24rpx;
  font-weight:400;
  color:rgba(60,60,60,1);
  margin-top: 22rpx;
  margin-left: 30rpx;
  text-align: left;
}
.user_history_order .user_history_order_info view text:nth-of-type(1){
  font-size:24rpx;
  font-weight:bold;
  color:rgba(60,60,60,1);
  margin-top: 12rpx;
    margin-left: 30rpx;
  display: inline-block;
  text-align: left;
}
.user_history_order .user_history_order_info view text:nth-of-type(2){
  font-size:24rpx;
  font-weight:bold;
  color:rgba(60,60,60,1);
  margin-top: 12rpx;
    margin-left: 40rpx;
  display: inline-block;
  text-align: left;
}
.user_history_order .user_history_order_info view text:nth-of-type(3){
  font-size:24rpx;
  font-weight: 400;
  color:rgba(60,60,60,1);
  margin-top: 12rpx;
  display: block;
    margin-left: 30rpx;
  text-align: left;
}
.user_history_order .trigger{
  display: block;
  width: 690rpx;
  padding-bottom: 10rpx;
  border-bottom:2rpx solid rgba(236,236,236,1);
  text-align: center;
  font-size:20rpx;
  font-weight:400;
  color:rgba(147,147,147,1);
  margin: 32rpx auto 0 auto;
}