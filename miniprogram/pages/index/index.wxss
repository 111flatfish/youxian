/**index.wxss**/
@import "../../common/common.wxss";
page {
  background: #fff;
}
/* banner */
.index_banner{
  height: 132rpx;
}
.index_banner .swiper-item image{
  width: 100%;
  height: 132rpx;
}
/* 搜索栏 */
.index_search{
  background-color: #f6f6f6;
  border-radius: 8rpx;
  position: relative;
  margin-top:30rpx;
}
.index_search input{
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #929292;
}
.index_search icon{
  position: absolute;
  right: 20rpx;
  top:16rpx;
  width:56rpx;
  height:56rpx;
  z-index: 2003;
}
/* 今日上新 */
.index_today_title{
  position: relative;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.index_today_title text{
  font-size: 32rpx;
  color: #3c3c3c;
  font-weight: bolder;
}
.index_today_title span{
  font-size: 20rpx;
  color: #565656;
  font-weight: normal;
  position: absolute;
  top:8rpx;
  right: 0;
}
.index_today_content .scrollview{
  display: flex;
  white-space: nowrap;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.index_today_content .index_today_content_item{
  /* display: inline-flex */
  display: inline-block;
  margin-right: 20rpx;
}
.index_today_content .index_today_content_item_img image{
  width: 190rpx;
  height: 244rpx;
  border: 0.6rpx solid #d8d8d8;
}
.index_today_content .index_today_content_item_dec text:nth-of-type(1){
  color: #0142E6;
  font-size: 24rpx;
}
.index_today_content .index_today_content_item_dec text:nth-of-type(2){
  color: #565656;
  font-size: 28rpx;
  display: block;
  font-weight: bold;
}
/* 求闲若渴 */
.index_requirement{
  margin-top: 40rpx;
   /* background: url("../../images/background.png") no-repeat center center; */
}
.index_requirement_text{
  padding-left: 30rpx;
  position: relative;
  display: inline-block;
  top: -60rpx;
  width: 460rpx;
}
.index_requirement_text text:nth-of-type(1){
  font-size: 32rpx;
  color: #3c3c3c;
  font-weight: bolder;
  display: block;
}
.index_requirement_text text:nth-of-type(2){
  font-size: 20rpx;
  color: #565656;
  margin-top: 20rpx;
  display: block;
}
.index_requirement_text text:nth-of-type(3){
  font-size: 18rpx;
  color: #929292;
  margin-top:4rpx;
  display: block;
}
.index_requirement_img{
  position: relative;
  display: inline-block;
}
.index_requirement_img image:nth-of-type(1){
  width:200rpx;
  height:200rpx;
}
.index_requirement_img text{
  width:200rpx;
  height:40rpx;
  background-color:rgba(255,255,255,1);
  opacity:0.8;
  position: absolute;
  bottom: 0;
  right: 0;
  color: #FF6323;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
}
.index_requirement_img image:nth-of-type(2){
  position: absolute;
  bottom: 35rpx;
  left: -30rpx;
  width: 60rpx;
  height: 60rpx;
  transform: rotateZ(-30deg);
}
/* 推荐 */
.index_category_title{
  margin: 30rpx auto;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  white-space: nowrap;
}
.index_category_title text{
  font-size: 32rpx;
  font-weight: 550;
  width: 140rpx;
  color: #3c3c3c;
  text-align: center;
  display: inline-block;
  margin-right: 44rpx;
  padding: 6rpx 0;
}
.index_category_title .index_category_active{
